<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <ImageView 
        android:id="@+id/Notify_img"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:src="@drawable/baishou" />
    <LinearLayout 
        android:layout_width="0dip"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:orientation="vertical"
         >
        <TextView 
            android:id="@+id/Tv_notifi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:singleLine="true"
             android:layout_marginLeft="15dp"
             android:layout_marginTop="2dp"
            android:textSize="15sp"
            android:text="标题" />
        <TextView 
            android:id="@+id/Tv_notifi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="15dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="歌手" />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
            <ImageView 
                android:id="@+id/Img_notifi_up"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp"
                android:src="@drawable/up" />
            <ImageView 
                android:id="@+id/Img_notifi_play"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/play" />
            <ImageView 
                android:id="@+id/Img_notifi_next"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:src="@drawable/next" />
        </LinearLayout>
    </LinearLayout>
    <ImageView 
        android:id="@+id/Img_notifi_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/delete_imageview" />

</LinearLayout>