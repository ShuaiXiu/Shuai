<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示方式"
            android:textSize="25sp" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/Rad_btn_List"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="列表显示" />

            <RadioButton
                android:id="@+id/Rad_btn_Grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="网格显示" />
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="常用功能"
            android:textSize="25sp" />

        <Button
            android:id="@+id/Btn_Net_backUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络备份" />

        <Button
            android:id="@+id/Btn_Net_HuanY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络还原" />
        <Button
            android:id="@+id/Btn_Native_backUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本地备份" />

        <Button
            android:id="@+id/Btn_Native_HuanY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本地还原" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_Setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@android:drawable/ic_menu_help"
        android:text="设置" />

</RelativeLayout>